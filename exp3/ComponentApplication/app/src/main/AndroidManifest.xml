<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComponentApplication">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 1. AnimalListActivity注册 -->
        <activity
            android:name=".AnimalListActivity"
            android:exported="false" />

        <!-- 2. AlertDialogActivity注册 -->
        <activity
            android:name=".AlertDialogActivity"
            android:exported="false" />

        <!-- 3. MenuActivity注册 -->
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>

        <!-- 4. ActionModeActivity注册 -->
        <activity
            android:name=".ActionModeActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>
    </application>

</manifest>