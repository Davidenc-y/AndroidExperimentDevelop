<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- 跳转ListView实验 -->
    <Button
        android:id="@+id/btn_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. ListView实验（SimpleAdapter+通知）"
        android:layout_marginBottom="15dp"/>

    <!-- 跳转自定义AlertDialog实验 -->
    <Button
        android:id="@+id/btn_alertdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. 自定义AlertDialog实验"
        android:layout_marginBottom="15dp"/>

    <!-- 跳转XML菜单实验 -->
    <Button
        android:id="@+id/btn_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. XML定义菜单实验（字体大小/颜色）"
        android:layout_marginBottom="15dp"/>

    <!-- 跳转ActionMode上下文菜单实验 -->
    <Button
        android:id="@+id/btn_actionmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. ActionMode上下文菜单实验"
        android:layout_marginBottom="15dp"/>

</LinearLayout>